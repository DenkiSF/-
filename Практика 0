#include <iostream>
#include <stdio.h>
#include <windows.h>
#define RUS SetConsoleCP(1251);SetConsoleOutputCP(1251);

using namespace std;

struct Data
{
	char tran[15];
	char num[8];
	float km;
	int min;
	char date[10];
} Data[3];

void draw_line()
{
	cout << "+"; cout.width(91); cout.fill('-'); cout << right << '+' << endl;
}

void draw_mline()
{
	cout.fill('-'); cout << left << "|";
	cout.width(15); cout << right << "+";
	cout.width(8); cout << right << "+";
	cout.width(28); cout << right << "+";
	cout.width(21); cout << right << "+";
	cout.width(19); cout << right << "|" << endl;
}

void header()
{
	draw_line();
	cout.fill(' ');
	cout.width(91); cout << left << "|Ведомость общественного транспорта"; cout << '|' << endl;
	draw_mline();
}
void categories()
{
	cout.width(15); cout << "|Вид транспорта";
	cout.width(8); cout << "|Маршрут";
	cout.width(28); cout << "|Протяжённость маршрута (км)";
	cout.width(21); cout << "|Время в дороге (мин)"; 
	cout.width(19); cout << "|Дата выхода в рейс"; cout << right << '|' << endl;
	draw_mline();
}

void note()
{
	cout.fill(' ');
	cout.width(91); cout << left << "|Примечание: Тр. - трамвай, Т-с - троллейбус, А - автобус"; cout << '|' << endl;
	draw_line();
}

void input(int i)
{
	cout << "Введите значение для строки номер " << i << endl;
	cout << "Вид транспорта: "; cin >> Data[i].tran;
	cout << "Маршрут: "; cin >> Data[i].num;
	cout << "Протяжённость маршрута (км): "; cin >> Data[i].km;
	cout << "Время в дороге (мин): "; cin >> Data[i].min;
	cout << "Дата выхода в рейс: "; cin >> Data[i].date;
	cout << endl;
}

void prints(int i)
{
	cout << "|"; cout.fill(' '); cout.width(14); cout << left << Data[i].tran;
	cout << "|"; cout.width(7); cout << left << Data[i].num;
	cout << "|"; cout.width(27); cout << left << Data[i].km;
	cout << "|"; cout.width(20); cout << left << Data[i].min;
	cout << "|"; cout.width(18); cout << left << Data[i].date;
	cout << "|" << endl;
	draw_mline();
}
int main()
{
	RUS
	input(1);
	input(2);
	input(3);

	header();

	categories();

	prints(1);
	prints(2);
	prints(3);

	note();

}
